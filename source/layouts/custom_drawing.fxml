<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane prefHeight="400.0" prefWidth="400" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DrawingController">
    <top>
        <VBox>
            <children>
                <MenuBar>
                    <menus>
                        <Menu text="File">
                            <items>
                                <MenuItem onAction="#onSave" text="Save"/>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <MenuItem onAction="#onClear" text="Clear"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <HBox alignment="CENTER" prefHeight="31.0" prefWidth="335.0" spacing="8">
                    <children>
                        <MenuButton mnemonicParsing="false" prefHeight="31.0" prefWidth="199.0"
                                    text="Choose drawing style">
                            <items>
                                <RadioMenuItem fx:id="freeDraw" mnemonicParsing="false" text="Free drawing">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="drawingShapes"/>
                                    </toggleGroup>
                                </RadioMenuItem>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <RadioMenuItem fx:id="drawRectangle" mnemonicParsing="false" text="Draw squares"
                                               toggleGroup="$drawingShapes"/>
                                <SeparatorMenuItem mnemonicParsing="false"/>
                                <RadioMenuItem fx:id="drawLine" mnemonicParsing="false" text="Draw lines"
                                               toggleGroup="$drawingShapes"/>
                            </items>
                        </MenuButton>
                        <ColorPicker fx:id="colorPicker" prefHeight="31.0" prefWidth="104.0"/>
                        <TextField fx:id="brushSize" prefHeight="31.0" prefWidth="78.0" text="10"/>
                    </children>

                </HBox>
            </children>
        </VBox>
    </top>
    <right>
        <Canvas fx:id="canvas" height="400" width="400" BorderPane.alignment="CENTER"/>
    </right>

</BorderPane>
